<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PowerShell API</title>
    @Styles.Render("~/content/css")
</head>
<body>
    <div class="container body-content">
        <div class="jumbotron">
            <h1>PowerShell API Framework</h1>
            <p class="lead">A Web API-based interface to PowerShell Scripting.</p>
            <p><a href="https://github.com/JaimeStill" target="_blank" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/core")
    @RenderSection("scripts", required: false)
</body>
</html>
